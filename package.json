{
  "name": "@portaler/mono",
  "version": "0.0.1",
  "description": "Avalonian Roads Mapping tool for Albion Online",
  "repository": "https://github.com/Portaler-Zone/portaler-core",
  "license": "GNU AGPLv3",
  "scripts": {
    "build:data": "cd shared/data-models && yarn build",
    "build:utils": "cd shared/universal-utils && yarn build",
    "build:shared": "concurrently \"yarn build:data\" \"yarn build:utils\" && yarn",
    "dev:api": "yarn build:shared && yarn && cd packages/api-server && yarn start:dev",
    "dev:bot": "yarn build:shared && yarn && cd packages/discord-bot && yarn start:dev",
    "dev:front": "yarn build:shared && yarn && cd packages/frontend && yarn start",
    "prebuild:api": "yarn build:shared",
    "prebuild:bot": "yarn build:shared",
    "prebuild:front": "yarn build:utils",
    "build:api": "cd packages/api-server && yarn build",
    "build:bot": "cd packages/discord-bot && yarn build",
    "build:front": "cd packages/frontend && yarn build",
    "start:api": "cd packages/api-server && yarn start",
    "start:bot": "cd packages/discord-bot && yarn start",
    "clean:shared": "rimraf shared/**/node_modules",
    "clean:packages": "rimraf packages/**/node_modules",
    "clean": "concurrently \"yarn clean:shared\" \"yarn clean:packages\" && rimraf node_modules",
    "clean:out": "concurrently \"rimraf shared/**/out\" \"rimraf packages/**/out\" \"rimraf packages/**/build\"",
    "clean:all": "yarn clean out && yarn clean",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx --ignore-pattern '/node_modules/' ./packages",
    "lint:fix": "eslint --fix --ext .js,.jsx,.ts,.tsx --ignore-pattern '/node_modules/' ./packages"
  },
  "workspaces": [
    "packages/*",
    "shared/*"
  ],
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.10.0",
    "@typescript-eslint/parser": "^2.10.0",
    "concurrently": "^5.3.0",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-config-react-app": "^5.2.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.21.4",
    "eslint-plugin-react-hooks": "^4.1.2",
    "eslint-webpack-plugin": "^2.1.0",
    "prettier": "^2.1.2",
    "prettier-eslint": "^11.0.0",
    "rimraf": "^3.0.2",
    "tslint": "^6.1.3",
    "typescript": "~3.7.2"
  },
  "private": true
}